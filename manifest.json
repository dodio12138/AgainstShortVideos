{
    "manifest_version": 2,
    "name": "Against Short Videos",
    "description": "Remove short videos of less than 30 seconds on Bilibili",
    "version": "1.1",
    "icons": {
    "128": "/images/icon.png"
    },
    "permissions": [
        "https://www.bilibili.com/*",
        "activeTab"
      ],
    "content_scripts": [
        {
          "js": ["scripts/content.js"],
          "matches": [
            "https://www.bilibili.com/*"
          ]
        }
      ]
    }